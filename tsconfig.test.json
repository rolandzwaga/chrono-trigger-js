{
  "compilerOptions": {
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "module": "commonjs",
    "target": "es2015",
    "moduleResolution": "node",
    "lib": ["es2015", "es6", "es2017", "dom"],
    "rootDir": ".",
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "sourceMap": true,
    "declaration": true,
    "typeRoots": ["./src/@types/typings.d.ts", "./src/@types/test-typings.d.ts", "./node_modules/@types"],
    "types": ["jasmine"]
  },
  "typeAcquisition": {
    "enable": true
  },
  "exclude": ["node_modules", "dist"]
}
